<Window x:Class="WPF_Intro.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Intro"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Background>
        <ImageBrush/>
    </Window.Background>
    <Grid Background="#FF4FBC55">
        <TextBox x:Name="txtName" HorizontalAlignment="Left" Margin="97,115,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Height="28"/>
        <Label Content="Welcome to MIS 3033!" HorizontalAlignment="Center" Height="53" Margin="0,50,0,0" VerticalAlignment="Top" Width="290" FontSize="24"/>
        <Label Content="Enter Name:" HorizontalAlignment="Left" Height="28" Margin="10,115,0,0" VerticalAlignment="Top" Width="82"/>
        <TextBox x:Name="txtage" HorizontalAlignment="Left" Margin="97,180,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Height="28"/>
        <Label Content="Enter Age:" HorizontalAlignment="Left" Height="28" Margin="10,180,0,0" VerticalAlignment="Top" Width="82"/>
        <Button x:Name="btnGo" Content="Go!" HorizontalAlignment="Left" Margin="293,288,0,0" VerticalAlignment="Top" Height="49" Width="152" Click="btnGo_Click"/>

    </Grid>
</Window>
