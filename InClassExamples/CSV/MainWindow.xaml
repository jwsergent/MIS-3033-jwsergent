<Window x:Class="CSV.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CSV"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="btnSelectFile" Content="Select" HorizontalAlignment="Left" Margin="458,113,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.195,1.315" Height="37" Width="124" Click="btnSelectFile_Click"/>
        <Label Content="Enter File Path" HorizontalAlignment="Left" Margin="58,119,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtFilePath" HorizontalAlignment="Left" Margin="148,127,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="252"/>
        <ListBox Margin="0,245,0,0" HorizontalAlignment="Center" Width="800"/>
        <Button x:Name="btnProcess" Content="Process" HorizontalAlignment="Left" Margin="190,191,0,0" VerticalAlignment="Top" Height="43" Width="150" IsEnabled="False" Click="btnProcess_Click"/>

    </Grid>
</Window>
