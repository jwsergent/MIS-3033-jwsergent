<Window x:Class="ChuckNorrisJokes.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChuckNorrisJokes"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Image Margin="0,0,-0.4,0" Source="Image1.png" Stretch="Fill"/>
        <ComboBox x:Name="cboCategories" HorizontalAlignment="Left" Margin="25,46,0,0" VerticalAlignment="Top" Width="150" SelectionChanged="cboCategories_SelectionChanged"/>
        <Label Content="Joke Categories" HorizontalAlignment="Left" Margin="25,10,0,0" VerticalAlignment="Top" Height="31" Width="150" Background="#FFEE8215" HorizontalContentAlignment="Center"/>
        <TextBlock x:Name="txtJoke" HorizontalAlignment="Left" Margin="499,32,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Height="97" Width="195" Background="#FFC51515" Padding="0" UseLayoutRounding="False"/>
        <Button x:Name="btnGenerate" Content="Generate Quote" HorizontalAlignment="Left" Margin="197,32,0,0" VerticalAlignment="Top" Width="93" Height="22" Click="btnGenerate_Click"/>

    </Grid>
</Window>
